div(id="spinner")

.frame(du-scroll-container)
	

	.list-wrapper(id="top" send-height)
		

		.rbma-radio-picks
			h1(class="title") {{list.fields.parentTitle}}
		h1(class="author") {{list.fields.author}}

		ul(class="list-thumbs")
			
			li(ng-repeat="entry in list.fields.individualListItems")
				
				.thumb-container
					
					a(href="#{{entry.fields.anchorLinkTag}}", du-smooth-scroll)
						
						.img-container
							
							span(class="order") {{entry.fields.order}}
							
							img(ng-src="{{entry.fields.image.fields.file.url}}")

		


		img(ng-src="{{list.fields.authorImage.fields.file.url}}", class="author-hero-image")
		

		p(class="intro", ng-bind-html="trust(list.fields.body)")


		

		ul(class="list-items")
			
			li(class="list-item", ng-repeat="item in list.fields.individualListItems")
				
				.list-container
					
					.list-titles
						
						a(id="{{item.fields.anchorLinkTag}}" class="item-order-link" data-order="{{item.fields.order}}")
						
						span(class="item-order") {{item.fields.order}}
						
						h3(class="item-title") {{item.fields.title}}
					
					.item-body
						
						.item-image-wrapper(ng-show="{{item.fields.embedAsImage}}")
							
							img(ng-src="{{item.fields.image.fields.file.url}}")
						
						p(ng-bind-html="trust(item.fields.body)")

		



		.sidebar(sticky)
			
			a(href="#top", du-smooth-scroll, class="topscroll")
				
				img(ng-src="{{list.fields.authorImage.fields.file.url}}")
				
				h4(class="radio-picks-sidebar") {{list.fields.parentTitle}}
				
				h4(class="author-sidebar") {{list.fields.author}}
				
			

			ul(class="sidebar-list")
				
				a(ng-repeat="item in list.fields.individualListItems", 
					class="{{item.fields.anchorLinkTag}}",
					href="#{{item.fields.anchorLinkTag}}",
					du-smooth-scroll)
						
					
					li(class="sidebar-item" data-order="{{item.fields.order}}")
						.order {{item.fields.order}}
						{{item.fields.title}}

			.button-group
				
				.button
					
					a(href="https://twitter.com/share?url={{feature.fields.rbmaUrl}}&via=rbma&text={{list.fields.title}}", target="blank")
						
						i(class="fa fa-twitter")
				
				.button
					
					a(href="https://www.facebook.com/sharer/sharer.php?u={{list.fields.rbma_url}}", target="blank")
						
						i(class="fa fa-facebook")
